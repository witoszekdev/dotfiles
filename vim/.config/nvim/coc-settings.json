{
  "eslint.autoFixOnSave": true,
  "yaml": {
    "enable": true,
    "format": {
      "enable": true
    }
  },
  "git.enableGlobalStatus": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": [
        "typescript",
        "typescriptreact",
        "graphql",
        "javascript",
        "javascriptreact"
      ]
    }
  }
}
