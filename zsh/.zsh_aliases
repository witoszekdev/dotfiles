alias ni="npm install"
alias nid="npm install -D"
alias nr="npm run"
alias zshconfig="code ~/.zshrc"

# lsd shortcuts
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'

# Additional git aliases
alias gce='git commit --allow-empty'
alias gpf='git push --force-with-lease' # https://stackoverflow.com/a/37460330
checkout() {
    if [ -z "$1" ] ; then
        git checkout $(git branch | fzf | tr -d '[:space:]' | tr -d '^[*+]') $@
    else
        git checkout $@
    fi
}
alias gco='checkout'

# nnn
alias nnn='nnn -e'

# bat
alias cat='bat'

# zoxide
alias z='zoxide'

# open vim as server
alias svim='nvim --listen /tmp/nvimsocket'

# kitty ssh
alias s="kitty +kitten ssh"

# projects browser
projects() {
  cd ~/PROJECTS
  selected_folder=$(find . -type d -maxdepth 2 | fzf)

  if [ -n "$selected_folder" ]; then
    cd $selected_folder
  fi
}
alias p='projects'
